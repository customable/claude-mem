# Claude-Mem Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# Authentication
# ===========================================

# Shared secret for worker authentication (generate with: openssl rand -hex 32)
CLAUDE_MEM_WORKER_AUTH_TOKEN=

# Token for remote API access (hooks, external clients)
CLAUDE_MEM_REMOTE_TOKEN=

# ===========================================
# AI Provider
# ===========================================

# AI provider to use: mistral, gemini, openrouter, openai, anthropic
CLAUDE_MEM_AI_PROVIDER=mistral

# API Keys (only need the one matching your provider)
CLAUDE_MEM_MISTRAL_API_KEY=
CLAUDE_MEM_GEMINI_API_KEY=
CLAUDE_MEM_OPENROUTER_API_KEY=
CLAUDE_MEM_OPENAI_API_KEY=
CLAUDE_MEM_ANTHROPIC_API_KEY=

# ===========================================
# Logging
# ===========================================

# Log level: debug, info, warn, error
CLAUDE_MEM_LOG_LEVEL=info
