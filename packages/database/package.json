{
  "name": "@claude-mem/database",
  "version": "2.16.0",
  "description": "Database layer for claude-mem with SQLite implementation",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./sqlite": {
      "types": "./dist/sqlite/index.d.ts",
      "import": "./dist/sqlite/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "bun test"
  },
  "dependencies": {
    "@claude-mem/shared": "workspace:*",
    "@claude-mem/types": "workspace:*",
    "@mikro-orm/better-sqlite": "^6.4.0",
    "@mikro-orm/core": "^6.4.0",
    "@mikro-orm/knex": "^6.4.0",
    "@mikro-orm/migrations": "^6.4.0",
    "@mikro-orm/mysql": "^6.4.0",
    "@mikro-orm/postgresql": "^6.4.0"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^6.6.5",
    "@types/bun": "^1.3.6",
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "bun": ">=1.0.0"
  },
  "peerDependenciesMeta": {
    "bun": {
      "optional": true
    }
  },
  "files": [
    "dist",
    "src"
  ]
}
