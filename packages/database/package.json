{
  "name": "@claude-mem/database",
  "version": "3.0.1",
  "description": "Database layer for claude-mem with SQLite implementation",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./sqlite": {
      "types": "./dist/sqlite/index.d.ts",
      "import": "./dist/sqlite/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@claude-mem/shared": "workspace:*",
    "@claude-mem/types": "workspace:*",
    "@mikro-orm/better-sqlite": "^6.6.5",
    "@mikro-orm/core": "^6.6.5",
    "@mikro-orm/knex": "^6.6.5",
    "@mikro-orm/migrations": "^6.6.5",
    "@mikro-orm/mysql": "^6.6.5",
    "@mikro-orm/postgresql": "^6.6.5"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^6.6.5",
    "@types/node": "^24.10.9",
    "typescript": "^5.9.3"
  },
  "files": [
    "dist",
    "src"
  ],
  "publishConfig": {
    "registry": "https://git.customable.host/api/packages/customable/npm/",
    "access": "public"
  }
}
