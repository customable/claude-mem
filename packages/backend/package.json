{
  "name": "@claude-mem/backend",
  "version": "2.49.6",
  "description": "Backend server for claude-mem - REST API, WebSocket Hub, Task Queue",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "claude-mem-backend": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "registry": "https://git.customable.host/api/packages/customable/npm/",
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js start",
    "dev": "node --watch dist/cli.js start",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@claude-mem/database": "workspace:*",
    "@claude-mem/shared": "workspace:*",
    "@claude-mem/types": "workspace:*",
    "better-sqlite3": "^11.8.1",
    "commander": "^14.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "express-slow-down": "^3.0.1",
    "lru-cache": "^11.2.4",
    "prom-client": "^15.1.3",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^24.10.9",
    "@types/ws": "^8.18.1",
    "typescript": "^5.9.3"
  }
}
